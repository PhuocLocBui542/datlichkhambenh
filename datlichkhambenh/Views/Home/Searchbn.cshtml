@{
	Layout = "~/Views/Shared/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Bảng thông tin bệnh nhân</title>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    table, th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
</style>
</head>
<body>

<h2>Bảng thông tin bệnh nhân</h2>

<table>
  <thead>
    <tr>
      <th>Mã bệnh nhân</th>
      <th>Tên bệnh nhân</th>
      <th>Ngày sinh</th>
      <th>Giới tính</th>
    </tr>
  </thead>
  <tbody>
     @foreach (var benhnhan in @ViewBag.benhnhans)
    {
        <tr>
            <td>@benhnhan.Mabn</td>
            <td>@benhnhan.Tenbn</td>
            <td>@benhnhan.Ngaysinh.ToString("dd/MM/yyyy")</td>
            <td>@benhnhan.Gioitinh</td>
        </tr>
    }
<!-- Add more rows as needed -->
  </tbody>
</table>

</body>
</html>
